<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="nicolassing_sequence.orm.sequence_repository" class="Doctrine\ORM\EntityRepository" public="false">
            <factory service="doctrine" method="getRepository"/>
            <argument>%nicolassing_sequence.model.sequence.class%</argument>
        </service>

        <service id="nicolassing_sequence.sequence_factory" class="Nicolassing\SequenceBundle\Factory\SequenceFactory" public="false">
            <argument>%nicolassing_sequence.model.sequence.class%</argument>
        </service>

        <service id="Nicolassing\SequenceBundle\Formatter\Number\NumberFormatterChain" public="false"/>

        <service id="Nicolassing\SequenceBundle\Formatter\Prefix\PrefixFormatterChain" public="false"/>

        <service id="nicolassing_sequence.number_generator_factory" class="Nicolassing\SequenceBundle\Factory\NumberGeneratorFactory" public="false">
            <argument type="service" id="nicolassing_sequence.orm.sequence_repository" />
            <argument type="service" id="nicolassing_sequence.sequence_factory"/>
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
        </service>

        <service id="nicolassing_sequence.generate_event_listener" class="Nicolassing\SequenceBundle\EventListener\GenerateListener" public="false">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="annotations.reader"/>
            <tag name="doctrine.event_listener" event="prePersist" lazy="true"/>
        </service>

        <service id="nicolassing_sequence.event_listener.sequenceable_object_listener" class="Nicolassing\SequenceBundle\EventListener\SequenceableObjectListener" public="false">
            <argument type="service" id="annotations.reader"/>
            <argument type="service" id="nicolassing_sequence.number_generator_factory"/>
            <argument type="service" id="Nicolassing\SequenceBundle\Formatter\Number\NumberFormatterChain"/>
            <argument type="service" id="Nicolassing\SequenceBundle\Formatter\Prefix\PrefixFormatterChain"/>
            <tag name="kernel.event_listener" event="sequenceable_object.created" method="onSequenceableObjectCreated" lazy="true"/>
        </service>
    </services>
</container>
